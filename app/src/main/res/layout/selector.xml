<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectorActivity"
    android:background="@drawable/gradient"
    >


    <View
        android:id="@+id/fondo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/borde_derecha_cuadrado"
        />

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/cyber_font"
        android:text="+2"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cyberpunk_reflejos"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintStart_toEndOf="@id/information"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cyberpunk_inteligencia"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintStart_toEndOf="@id/image_1"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cyberpunk_temple"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintStart_toEndOf="@id/image_2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />


    <TextView
        android:id="@+id/name_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucy Kushinad"
        android:textColor="@color/red"
        android:fontFamily="@font/cyber_font"
        app:layout_constraintTop_toTopOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/edit_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        app:layout_constraintTop_toTopOf="@id/fondo"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your character"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/cyber_font"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        app:layout_constraintBottom_toTopOf="@id/fondo"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/image_character"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@id/fondo"
        app:layout_constraintBottom_toBottomOf="@id/fondo"
        app:layout_constraintEnd_toEndOf="@id/fondo"
        app:layout_constraintStart_toStartOf="@id/fondo"
        android:src="@drawable/lucyna_kushinada"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_continue"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:text="Continue"
        android:fontFamily="@font/cyber_font"
        android:textColor="@color/blue"
        android:background="@drawable/borde_derecha_rectangulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fondo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>